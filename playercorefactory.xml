<playercorefactory>
  <players>
    <player name="VLC" type="ExternalPlayer" audio="false" video="true">
      <filename>/usr/bin/vlc</filename>
      <args>--fullscreen "{1}"</args>
      <hidexbmc>false</hidexbmc>
    </player>
  </players>
  <rules action="prepend">
    <rule video="true" player="VLC"/>
  </rules>
</playercorefactory>
